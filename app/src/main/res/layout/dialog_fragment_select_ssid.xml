<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.amuday.yeelightcontrol.SelectSsidDialogFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="@string/select_ssid_from_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:id="@+id/text_select_ssid_from_list" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/text_select_ssid_from_list"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/button_update_ssid"
            android:id="@+id/list_ssid" />

        <Button
            android:text="@string/update_ssids"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/button_update_ssid" />
    </RelativeLayout>

</FrameLayout>
